{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "useTabs": true,
  "tabWidth": 4,
  "singleQuote": true,
  "semi": false,
  "trailingComma": "none",
  "endOfLine": "lf",
  "printWidth": 80,
  "arrowParens": "avoid",
  "experimentalSortPackageJson": false,
  "ignorePatterns": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    ".cache",
    ".vercel",
    ".turbo",
    "*.lock",
    "package-lock.json",
    "bun.lock",
    "yarn.lock",
    "pnpm-lock.yaml"
  ]
}
