{
  "name": "remcostoeten-solidJS",
  "description": "Remcostoeten.nl, my personal about me site  with a comprehensive back-end containing self rolled auth + RBA, self rolled visitor  analytics and a complete custom rolled CMS system in the admin area",
  "type": "module",
  "scripts": {
    "dev": "vinxi dev",
    "build": "vinxi build",
    "rebuild": "rm -rf node_modules && rm -rf .vinxi && rm -rf .output && bun install && vinxi build",
    "start": "vinxi start",
    "gen": "drizzle-kit generate",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:analytics": "vitest run scripts/test-analytics.test.js",
    "docs:dev": "echo 'Documentation available in docs/ directory'",
    "storybook": "storybook dev -p 6006",
    "component:test": "vitest run src/components/ui/ButtonLink.test.tsx",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@motionone/solid": "^10.16.4",
    "@solidjs/router": "^0.15.0",
    "@solidjs/start": "^1.1.0",
    "@tanstack/solid-query": "^5.83.0",
    "@types/pg": "^8.15.4",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.3",
    "postgres": "^3.4.7",
    "solid-js": "^1.9.5",
    "vinxi": "^0.5.7"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.10",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/vite": "^4.0.7",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/better-sqlite3": "^7.6.13",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "storybook": "^9.0.18",
    "storybook-solidjs-vite": "^9.0.2",
    "tailwindcss": "^4.0.7",
    "tsx": "^4.20.3",
    "vite-plugin-solid": "^2.11.7",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22"
  }
}
